{
  "manifest_version": 3,
  "name": "OpenAI Context Counter",
  "version": "1.0",
  "description": "Tells you how much of the context you used in your ChatGPT conversation",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "OpenAI Context Counter"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/chat*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*"
      ],
      "matches": [
        "*://*/*"
      ]
    },
    {
      "resources": [
        "style/extension.css",
        "script/extension.js"
      ],
      "matches": [
        "https://example.com/*"
      ]
    }
  ]
}
